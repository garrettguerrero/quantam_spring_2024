<%= render("layouts/shared/breadcrumb", breadcrumbs: [
  { name: "Articles", path: articles_path },
  { name: "Modules" },
]) %>

<div class="hstack mb-3">
  <h1>Modules</h1>
  <div class="ms-auto">
    <%= link_to 'New Module', new_article_module_path, class: "btn btn-primary" %>
  </div>
</div>

<div>
  <div class="hstack">
    <div class="vstack gap-3">
      <div class="card">
        <ul class="list-group list-group-flush">
          <% @article_modules.each do |article_module| %>
            <li class="list-group-item hstack gap-2">
              <%= button_to increase_priority_article_module_path(article_module), method: :post,
                            class: 'btn btn-sm btn-outline-secondary', data: { cta_id: "#{article_module.id}_inc" } do %>
                <span class="fas fa-arrow-up"></span>
              <% end %>
              <%= button_to decrease_priority_article_module_path(article_module), method: :post,
                            class: 'btn btn-sm btn-outline-secondary', data: { cta_id: "#{article_module.id}_dec" } do %>
                <span class="fas fa-arrow-down"></span>
              <% end %>
              <%= article_module.name %>
              <div class="ms-auto hstack gap-2">
                <%= link_to 'Edit', edit_article_module_path(article_module), class: "btn btn-secondary" %>
                <%= link_to 'Delete', delete_article_module_path(article_module), class: "btn btn-danger" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
