<%= render("layouts/shared/breadcrumb", breadcrumbs: [
  { name: "Articles", path: articles_path },
  { name: "Categories" },
]) %>

<div class="hstack mb-3">
  <h1>Categories</h1>
  <div class="ms-auto">
    <%= link_to 'New Category', new_article_category_path, class: "btn btn-primary" %>
  </div>
</div>

<div>
  <div class="hstack">
    <div class="vstack gap-3">
      <div class="card">
        <ul class="list-group list-group-flush">
          <% @article_categories.each do |article_category| %>
            <li class="list-group-item hstack gap-2">
              <%= article_category.name %>
              <div class="ms-auto hstack gap-2">
                <%= link_to 'Edit', edit_article_category_path(article_category), class: "btn btn-secondary" %>
                <%= link_to 'Delete', delete_article_category_path(article_category), class: "btn btn-danger" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
