<div class="vstack align-items-center gap-3">
  <h1>Online Help</h1>

  <div class="col-8">
    <h3>Users</h3>
    <div class="accordion" id="accordionPanelsStayOpenExample">
      <% @user_faqs.each_with_index do |faq, index| %>
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#userPanelsStayOpen-collapse<%= index %>" aria-expanded="true" aria-controls="userPanelsStayOpen-collapse<%= index %>">
              <%= faq[:question] %>
            </button>
          </h2>
          <div id="userPanelsStayOpen-collapse<%= index %>" class="accordion-collapse collapse">
            <div class="accordion-body">
              <%= render faq[:answer] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if current_user.officer? %>
    <div class="col-8">
      <h3>Officers</h3>
      <div class="accordion" id="accordionPanelsStayOpenExample">
        <% @officer_faqs.each_with_index do |faq, index| %>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#officerPanelsStayOpen-collapse<%= index %>" aria-expanded="true" aria-controls="officerPanelsStayOpen-collapse<%= index %>">
                <%= faq[:question] %>
              </button>
            </h2>
            <div id="officerPanelsStayOpen-collapse<%= index %>" class="accordion-collapse collapse">
              <div class="accordion-body">
                <%= render faq[:answer] %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
